<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >

    <Button
        android:id="@+id/btn_aty_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按钮 1"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="#ff0033"
        />

    <Button
        android:id="@+id/btn_aty_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按钮 2 圆角"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="@drawable/bg_btn2"
        android:layout_below="@id/btn_aty_1"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/btn_aty_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按钮 3"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_below="@id/btn_aty_2"
        android:background="@drawable/bg_btn3_copy"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/btn_aty_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按钮 4"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="@drawable/bg_btn_4"
        android:layout_below="@id/btn_aty_3"
        android:layout_marginTop="15dp"
        android:onClick="showToast"
        />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="文字1"
        android:layout_below="@id/btn_aty_4"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:background="#ffad33"
        android:gravity="center"
        />


</RelativeLayout>